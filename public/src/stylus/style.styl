@import "_variables";
@import "_bootstrap";
@import "_highlight";
@import "_fonts";


a i span {
  padding-left: 0.3em;
}

/* root elements */

header:after {
  display: block;
  content: '';
  height: 5em;
}

main {
  display: block;
  padding: 0.5em 2.5em;

  h1, h2, h3, h4, h5, h6 {
    margin: 0.8em 0;
    padding-bottom: 0.2em;
    border-bottom: 1px solid $gray-lighter;
  }

  .pageHeader {
    clearfix();

    .actions {
      float: right;
    }

    h1 {
      margin-top: 0;
    }
  }

  .lastEdit {
    font-size: 80%;
    border-top: 1px solid $gray-lighter;
    margin-top: 4em;
    padding-top: 0.5em;
    color: $gray-light;

    .author {
      font-weight: bold;
    }
  }
}

footer {
  display: block;
  background-color: $navbar-inverse-bg;
  color: $navbar-inverse-color;
  margin-top: 2em;
  padding: 0.5em 1em;
  font-size: 80%;
}

#loading {
  font-size: 140%;
  text-align: center;
  
  span {
    margin-left: 0.2em;
  }
}
@media (min-width: 768px) {
  #loading {
    .modal-dialog {
      width: 300px;
    }    
  }
}



/* site index */

#wikiIndex {
  .pageBody {
    .sort {
      ul {
        display: inline-block;
        vertical-align: middle;
        margin-left: 1em;
      }
    }

    ul.pages {
      display: block;
      list-style-type: none;
      padding: 0;
      margin-top: 1.5em;
    }
  }
}

/* editor */

#editor {
  .comment {
    padding: 1em 1em 0;
    margin-top: 2em;
    font-size: 90%;
  }
}
